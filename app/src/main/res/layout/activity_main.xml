<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:id="@+id/drawerLayout"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:text="이름과 날짜"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <TextView
            android:id="@+id/mainArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:text="근무구역"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <TextView
            android:id="@+id/mainDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="시간"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <ImageButton
            android:id="@+id/workBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="14dp"
            android:background="@android:color/transparent"
            android:src="@drawable/out_btn"
            android:text="출근"
            app:layout_constraintEnd_toStartOf="@+id/leaveBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#3e4f87"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/a14"
            android:text="출근"
            app:layout_constraintTop_toBottomOf="@+id/mainDate"
            android:layout_marginTop="29dp"
            android:layout_marginStart="102dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/leaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/out_btn"
            android:text="퇴근"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="#3e4f87"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/a14"
            android:text="퇴근"
           app:layout_constraintTop_toBottomOf="@+id/mainDate"
            android:layout_marginTop="29dp"
            android:layout_marginStart="235dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/wearherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="500dp"
            android:text="오늘의 날씨"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#3e4f87"
            android:lineSpacingExtra="7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <TextView
            android:id="@+id/cityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="80dp"
            android:text="서울"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tempView"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <TextView
            android:id="@+id/tempView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <ImageView
            android:id="@+id/weathericon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="476dp"
            app:layout_constraintStart_toEndOf="@+id/tempView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sosTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="330dp"
            android:text="긴급연락"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#3e4f87"
            android:lineSpacingExtra="7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <ImageButton
            android:id="@+id/sosMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:background="@android:color/transparent"
            android:src="@drawable/mic_btn"
            android:text="MIC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sosSend"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/mic_stroke"
            android:textStyle="normal"
            android:textSize="9sp"
            android:textColor="#707070"
            android:lineSpacingExtra="3sp"
            android:gravity="center"
            android:text="텍스트 입력"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <ImageButton
            android:id="@+id/sosBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="400dp"
            android:background="@android:color/transparent"
            android:src="@drawable/mic_send"
            android:text="MIC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sostext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="439dp"
            android:text="음성 버튼을 누르고 녹음을 시작하세요"
            android:textStyle="normal"
            android:textSize="9sp"
            android:textColor="#707070"
            android:lineSpacingExtra="3sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nanumsquarer"/>

        <ImageButton
            android:id="@+id/mainNotification"
            android:layout_width="79dp"
            android:layout_height="85dp"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification_btn"
            android:text="공지사항"
            app:layout_constraintEnd_toStartOf="@+id/mainSalary"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/mainSalary"
            android:layout_width="79dp"
            android:layout_height="85dp"
            android:layout_marginTop="620dp"
            android:background="@android:color/transparent"
            android:src="@drawable/salary_btn"
            android:text="급여내역"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/mainCalender"
            android:layout_width="79dp"
            android:layout_height="85dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="620dp"
            android:background="@android:color/transparent"
            android:src="@drawable/calender_btn"
            android:text="작업일정표"
            app:layout_constraintStart_toEndOf="@+id/mainSalary"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/main_drawer_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        app:itemIconTint="#7e84a3"
        app:itemTextColor="#99000000"
        app:itemTextAppearance="@font/robotomedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:background="@color/main">
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:drawableLeft="@drawable/logout_icon"
                android:text="로그아웃" />
        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>