<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="203dp"
    android:id="@+id/navigationHeader"
    android:background="@color/main">

    <ImageView
        android:id="@+id/navigationProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/profile_default" />

    <ImageButton
        android:id="@+id/navigationCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/header_x_btn"
        android:layout_marginStart="244.7dp"
        android:layout_marginTop="8.7dp"
        android:background="@null"
        app:tint="#ffffff"/>

    <ImageButton
        android:id="@+id/navigationCameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84.9dp"
        android:layout_marginTop="84dp"
        android:background="@null"
        android:visibility="invisible"
        app:srcCompat="@drawable/navigation_camera" />

    <TextView
        android:id="@+id/navigationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/a14"
        android:hint="이름"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/navigationEmplId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="173dp"
        android:fontFamily="@font/a12"
        android:hint="사원번호"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8sp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="normal" />


    <ImageButton
        android:id="@+id/navigationEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="209dp"
        android:layout_marginTop="165dp"
        android:background="@null"
        app:srcCompat="@drawable/navigation_edit"/>

    <ImageButton
        android:id="@+id/navigationSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="209dp"
        android:layout_marginTop="170dp"
        android:background="@null"
        app:srcCompat="@drawable/navigation_save"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000"
        android:layout_alignParentBottom="true">
    </View>


</RelativeLayout>