<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="203dp"
    android:id="@+id/navigationHeader"
    android:background="@color/main">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                android:layout_width="90dp"
                android:layout_height="90dp">
                <ImageView
                    android:id="@+id/navigationProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/profile_default"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ImageButton
            android:id="@+id/navigationCameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="55dp"
            android:background="@null"
            android:visibility="invisible"
            app:srcCompat="@drawable/navigation_camera" />
    </FrameLayout>


    <ImageButton
        android:id="@+id/navigationCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244.7dp"
        android:layout_marginTop="8.7dp"
        android:background="@null"
        app:srcCompat="@drawable/header_x_btn"
        app:tint="#ffffff" />

    <TextView
        android:id="@+id/navigationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/a14"
        android:hint="이름"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/navigationEmplId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="173dp"
        android:fontFamily="@font/a12"
        android:hint="사원번호"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8sp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="normal" />


    <ImageButton
        android:id="@+id/navigationEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="165dp"
        app:srcCompat="@drawable/edit_btn"
        android:background="@null" />

    <ImageButton
        android:id="@+id/navigationSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="165dp"
        android:background="@null"
        app:srcCompat="@drawable/save_btn"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000"
        android:layout_alignParentBottom="true">
    </View>

    <TextView
        android:id="@+id/edittext"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/a13"
        android:gravity="center"
        android:text="편집"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/savetext"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="198dp"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/a13"
        android:gravity="center"
        android:text="저장"
        android:textSize="12sp"
        android:visibility="gone"/>
</RelativeLayout>