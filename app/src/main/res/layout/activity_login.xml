<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:backgroundTintMode="src_in"
    tools:context=".LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="-26sp"
        android:textColor="#3e4f87"
        android:textSize="50sp"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/loginId"
        android:layout_width="200dp"
        android:layout_height="68.5dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="345dp"
        android:ems="10"
        android:hint="사원번호"
        android:inputType="number"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8sp"
        android:textColor="#99000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/a12"
        android:background="@null"
         />

    <EditText
        android:id="@+id/loginPw"
        android:layout_width="200dp"
        android:layout_height="68.5dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="410dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="number"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="8sp"
        android:textColor="#99000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/a12"
        android:background="@null"
        />

    <android.widget.Button
        android:id="@+id/findBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="482dp"
        android:lineSpacingExtra="10sp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@null"
        android:text="비밀번호 찾기"
        android:fontFamily="@font/a12"/>

    <ImageButton
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="375dp"
        android:layout_marginEnd="33dp"
        android:background="@android:color/transparent"
        android:src="@drawable/login_enter"
        android:text="로그인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPw"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/goToSignupBtn"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="588dp"
        android:layout_marginEnd="268dp"
        android:background="@android:color/transparent"
        android:src="@drawable/login_btn2"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="610dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:textColor="#666666"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="회원가입"
        android:fontFamily="@font/a14"/>


</androidx.constraintlayout.widget.ConstraintLayout>