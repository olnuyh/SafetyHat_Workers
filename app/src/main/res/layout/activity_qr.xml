<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3e4f87"
        app:layout_constraintTop_toTopOf="parent"></View>

    <FrameLayout
        android:layout_width="327dp"
        android:layout_height="487dp"
        android:background="@drawable/login_corner"
        android:layout_marginTop="137dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp"
        >

        <View
            android:id="@+id/loginBtn"
            android:layout_width="186dp"
            android:layout_height="196dp"
            android:background="#cecece"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="5sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="149dp"
            android:text="터치하세요" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="32sp"
            android:textColor="#352641"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="8sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="319dp"
            android:text="출근 등록"/>

        <TextView
            android:id="@+id/qrContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#767676"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="375dp"
            android:text="안전모에 부착된 QR코드를\n스캔해주세요" />
    </FrameLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginTop="657dp"
        android:background="@drawable/btn_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="666dp"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.009"
        android:lineSpacingExtra="5sp"
        android:textColor="#3c3c3c"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="닫기" />


</androidx.constraintlayout.widget.ConstraintLayout>